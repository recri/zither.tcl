lappend auto_path . ../keyer/lib

package require params
package require window

proc find-touch-input {} {
    set dev {}
    foreach line [split [string trim [exec lsinput]] \n] {
	switch -glob $line {
	    /dev/input/event* { set dev $line }
	    *name*:*ft5x06* { return $dev }
	}
    }
    return $dev
}

proc main {argc argv} {
    set opts {}
    foreach {key value} $argv {
	if {[info exists ::params::params($key)]} {
	    set ::params::params($key) $value
	} elseif {[info exists ::params::defaults($key)]} {
	    # set ::params::defaults($key) $value
	    lappend opts $key $value
	} else {
	    puts "invalid option key $key with value $value"
	    puts "valid option keys are [array get ::params::params] [array get ::params::defaults]"
	}
    }
    ::window::main {*}$opts

}

set ::params::params(dev) [find-touch-input]
main $argc $argv

